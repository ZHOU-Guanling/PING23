<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_1"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:src="@drawable/cheval1" />
    <Button
        android:id="@+id/cheval1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cheval1:A" />
    <ImageView
        android:id="@+id/image_view_2"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:src="@drawable/cheval2" />
    <Button
        android:id="@+id/cheval2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cheval2:B" />
    <ImageView
        android:id="@+id/image_view_3"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:src="@drawable/cheval3" />
    <ImageView
        android:id="@+id/image_view_4"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:src="@drawable/cheval4" />


</LinearLayout>
